<?xml version="1.0" encoding ="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.user.quiz.Questions"
    android:background="#ffffcd0e"
    android:weightSum="1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Question 1: Who is the person wearing jersey number 7 in the UST Growling Tigers?"
        android:id="@+id/textView"
        android:layout_marginTop="25dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A. Aljon Mariano"
        android:id="@+id/aButton"
        android:layout_marginTop="22dp"
        android:layout_margin="10dp"
        android:background="#ffff8e00"
        android:layout_below="@+id/aButton3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="B. Kevin Ferrer"
        android:id="@+id/bButton"
        android:layout_margin="10dp"
        android:layout_below="@+id/bButton3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"

        android:background="#ffff8e00" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="C. Karim Abdul"
        android:id="@+id/cButton"
        android:layout_margin="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/bButton3"
        android:layout_alignRight="@+id/cButton3"
        android:layout_alignEnd="@+id/cButton3"
        android:background="#ffff8e00" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="D. Kim Lo"
        android:id="@+id/dbutton"
        android:layout_below="@+id/dbutton"
        android:layout_margin="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#ffff8e00" />


</LinearLayout>
